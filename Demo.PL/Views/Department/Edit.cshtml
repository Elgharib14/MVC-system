@using Demo.DAL.Model;
@model Department
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>


<form class="container" asp-action="Edit">
    <div asp-validation-summary="All">
        @* To Collect all Error  *@
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Code"></label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="DateTimeCreation"></label>
        <input asp-for="DateTimeCreation" class="form-control" />
        <span asp-validation-for="DateTimeCreation" class="text-danger"></span>
    </div>
    <br />

    <center>
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-controller="Department" asp-action="Index" class="btn btn-light">Back to List</a>
    </center>

</form>

